      <script>
      // Filter functions
      function resetFilters() {
        document.getElementById('filtersForm').reset();
        window.location.href = '{{ route("pay_slips.index") }}';
      }

      // Bulk generate modal
      function showBulkGenerateModal() {
        document.getElementById('bulkGenerateModal').classList.remove('hidden');
        document.getElementById('bulkGenerateModal').classList.add('flex');
      }

      function closeBulkGenerateModal() {
        document.getElementById('bulkGenerateModal').classList.add('hidden');
        document.getElementById('bulkGenerateModal').classList.remove('flex');
      }

      // PaySlip actions
      function viewPayslip(id) {
        // Open payslip view in new window
        window.open(`/pay-slips/${id}`, '_blank');
      }

      function downloadPayslip(id) {
        // Download payslip PDF
        window.location.href = `/pay-slips/${id}/download`;
      }

      function printPayslip(id) {
        // Print payslip
        const printWindow = window.open(`/pay-slips/${id}/print`, '_blank');
        printWindow.onload = function() {
          printWindow.print();
        };
      }

      // Export functions
      function exportToExcel() {
        window.location.href = '/pay-slips/export/excel';
      }

      function exportToPDF() {
        window.location.href = '/pay-slips/export/pdf';
      }

      // Set current month and year for bulk generation
      document.addEventListener('DOMContentLoaded', function() {
        const now = new Date();
        const currentMonth = now.toLocaleDateString('fr-FR', { month: 'long' });
        const currentYear = now.getFullYear();

        // Set default values in bulk generate modal
        const monthSelect = document.getElementById('bulk_mois');
        const yearSelect = document.getElementById('bulk_annee');

        if (monthSelect && yearSelect) {
          monthSelect.value = currentMonth.charAt(0).toUpperCase() + currentMonth.slice(1);
          yearSelect.value = currentYear.toString();
        }
      });
      </script>

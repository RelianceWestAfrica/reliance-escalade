                  <div class="space-y-3 text-sm">
                    <div class="flex justify-between items-center">
                      <span class="text-gray-600">Salaire brut mensuel:</span>
                      <span class="font-medium" id="detailBrutSalary">0 FCFA</span>
                    </div>
                    <div class="flex justify-between items-center">
                      <span class="text-gray-600">Cotisations sociales (15%):</span>
                      <span class="font-medium text-red-600" id="detailCotisations">- 0 FCFA</span>
                    </div>
                    <div class="border-t border-gray-300 pt-3 flex justify-between items-center">
                      <span class="font-semibold text-gray-800">Salaire net à payer:</span>
                      <span class="font-bold text-lg text-blue-600" id="detailNetSalary">0 FCFA</span>
                    </div>
                  </div>
                </div>
              </div>

              <div id="noCalculation" class="text-center py-8 text-gray-500">
                <i class="fas fa-calculator text-4xl mb-4"></i>
                <p>Sélectionnez un employé et une période pour voir l'aperçu des calculs</p>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-between items-center pt-8 border-t border-gray-200">
              <a href="{{ route('pay_slips.index') }}" class="btn-secondary">
                <i class="fas fa-arrow-left mr-2"></i>
                Retour aux Fiches
              </a>

              <div class="flex gap-4">
                <button type="button" class="btn-outline" onclick="resetForm()">
                  <i class="fas fa-undo mr-2"></i>
                  Réinitialiser
                </button>
                <button type="button" class="btn-preview" onclick="previewPayslip()" id="previewBtn" disabled>
                  <i class="fas fa-eye mr-2"></i>
                  Aperçu Complet
                </button>
                <button type="submit" class="btn-primary-gradient" id="generateBtn" disabled>
                  <i class="fas fa-file-invoice mr-2"></i>
                  Générer la Fiche
                  <div class="btn-shine"></div>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <!-- Preview Modal -->
      <div id="previewModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden items-center justify-center z-50">
        <div class="bg-white rounded-3xl shadow-2xl max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
          <div class="p-8">
            <div class="flex items-center justify-between mb-6">
              <h3 class="text-2xl font-bold text-gray-800">Aperçu de la Fiche de Paie</h3>
              <button onclick="closePreview()" class="text-gray-500 hover:text-gray-700">
                <i class="fas fa-times text-xl"></i>
              </button>
            </div>
            <div id="previewContent" class="space-y-4">
              <!-- Preview content will be inserted here -->
            </div>
          </div>
        </div>
      </div>

      <style>
      /* Enhanced Form Styles */
      .form-group {
        @apply relative;
      }

      .form-label {
        @apply block text-sm font-semibold text-gray-700 mb-3 flex items-center;
      }

      .form-input, .form-select {
        @apply w-full bg-white border-2 border-gray-200 rounded-xl px-4 py-4 text-gray-800 placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all duration-300 shadow-sm hover:border-gray-300;
      }

      .form-hint {
        @apply text-xs text-gray-500 mt-2 italic;
      }

      .form-section {
        @apply bg-gradient-to-br from-gray-50/80 to-white rounded-2xl p-8 border border-gray-100 shadow-sm;
      }

      .btn-secondary {
        @apply px-6 py-3 border-2 border-gray-300 rounded-xl text-gray-700 font-semibold hover:bg-gray-50 hover:border-gray-400 transition-all duration-200 flex items-center;
      }

      .btn-outline {
        @apply px-6 py-3 border-2 border-blue-300 rounded-xl text-blue-600 font-semibold hover:bg-blue-50 hover:border-blue-400 transition-all duration-200 flex items-center;
      }

      .btn-preview {
        @apply px-6 py-3 border-2 border-purple-300 rounded-xl text-purple-600 font-semibold hover:bg-purple-50 hover:border-purple-400 transition-all duration-200 flex items-center disabled:opacity-50 disabled:cursor-not-allowed;
      }

      .btn-primary-gradient {
        @apply relative px-8 py-4 bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 text-white font-bold rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl flex items-center overflow-hidden disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none;
      }

      .btn-shine {
        @apply absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -skew-x-12 -translate-x-full transition-transform duration-1000;
      }

      .btn-primary-gradient:hover .btn-shine {
        @apply translate-x-full;
      }

      /* Form Enhancement Effects */
      .form-input:focus, .form-select:focus {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px -5px rgba(59, 130, 246, 0.15);
      }

      /* Section Animation */
      .form-section {
        animation: slideInUp 0.6s ease-out;
      }

      @keyframes slideInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      </style>

      <script>
      let employees = @json(employees);

      // Employee filtering and sorting
      function filterEmployees() {
        const searchTerm = document.getElementById('search_employee').value.toLowerCase();
        const departmentFilter = document.getElementById('filter_department').value;
        const employeeSelect = document.getElementById('employee_id');

        // Clear current options except first one
        while (employeeSelect.children.length > 1) {
          employeeSelect.removeChild(employeeSelect.lastChild);
        }

        // Filter employees
        let filteredEmployees = employees.filter(employee => {
          const matchesSearch = employee.fullName.toLowerCase().includes(searchTerm);
          const matchesDepartment = !departmentFilter || employee.departement === departmentFilter;
          return matchesSearch && matchesDepartment;
        });

        // Add filtered options
        filteredEmployees.forEach(employee => {
          const option = document.createElement('option');
          option.value = employee.id;
          option.setAttribute('data-name', employee.fullName);
          option.setAttribute('data-department', employee.departement);
          option.setAttribute('data-salary', employee.salaire);
          option.setAttribute('data-post', employee.poste);
          option.className = 'employee-option';
          option.textContent = `👤 ${employee.fullName} - ${employee.poste} - ${employee.departement} (${employee.salaire.toLocaleString()} FCFA)`;
          employeeSelect.appendChild(option);
        });
      }

      function sortEmployees() {
        const sortBy = document.getElementById('sort_employees').value;

        employees.sort((a, b) => {
          switch(sortBy) {
            case 'name':
              return a.fullName.localeCompare(b.fullName);
            case 'name_desc':
              return b.fullName.localeCompare(a.fullName);
            case 'salary':
              return a.salaire - b.salaire;
            case 'salary_desc':
              return b.salaire - a.salaire;
            case 'department':
              return a.departement.localeCompare(b.departement);
            default:
              return 0;
          }
        });

        filterEmployees();
      }

      // Employee selection handler
      document.getElementById('employee_id').addEventListener('change', function() {
        const selectedOption = this.options[this.selectedIndex];
        const employeeInfo = document.getElementById('selectedEmployeeInfo');

        if (this.value) {
          const employeeName = selectedOption.dataset.name;
          const employeePost = selectedOption.dataset.post;
          const employeeDept = selectedOption.dataset.department;
          const employeeSalary = parseInt(selectedOption.dataset.salary);

          // Update display
          document.getElementById('selectedEmployeeName').textContent = employeeName;
          document.getElementById('selectedEmployeePost').textContent = employeePost;
          document.getElementById('selectedEmployeeDept').textContent = employeeDept;
          document.getElementById('selectedEmployeeSalary').textContent = employeeSalary.toLocaleString() + ' FCFA';

          // Calculate cotisations and net salary
          const cotisations = Math.round(employeeSalary * 0.15);
          const netSalary = employeeSalary - cotisations;

          document.getElementById('calculatedCotisations').textContent = cotisations.toLocaleString() + ' FCFA';
          document.getElementById('calculatedNetSalary').textContent = netSalary.toLocaleString() + ' FCFA';

          employeeInfo.classList.remove('hidden');
          updateCalculationPreview();
        } else {
          employeeInfo.classList.add('hidden');
          hideCalculationPreview();
        }

        checkFormCompletion();
      });

      // Period selection handlers
      document.getElementById('mois').addEventListener('change', updatePeriodSummary);
      document.getElementById('annee').addEventListener('change', updatePeriodSummary);

      function updatePeriodSummary() {
        const mois = document.getElementById('mois').value;
        const annee = document.getElementById('annee').value;
        const periodSummary = document.getElementById('periodSummary');

        if (mois && annee) {
          document.getElementById('selectedPeriod').textContent = `${mois} ${annee}`;
          periodSummary.classList.remove('hidden');
        } else {
          periodSummary.classList.add('hidden');
        }

        updateCalculationPreview();
        checkFormCompletion();
      }

      function updateCalculationPreview() {
        const employeeSelect = document.getElementById('employee_id');
        const selectedOption = employeeSelect.options[employeeSelect.selectedIndex];
        const mois = document.getElementById('mois').value;
        const annee = document.getElementById('annee').value;

        if (employeeSelect.value && mois && annee) {
          const salary = parseInt(selectedOption.dataset.salary);
          const cotisations = Math.round(salary * 0.15);
          const netSalary = salary - cotisations;

          // Update preview
          document.getElementById('previewBrutSalary').textContent = salary.toLocaleString() + ' FCFA';
          document.getElementById('previewCotisations').textContent = cotisations.toLocaleString() + ' FCFA';
          document.getElementById('previewNetSalary').textContent = netSalary.toLocaleString() + ' FCFA';

          // Update details
          document.getElementById('detailBrutSalary').textContent = salary.toLocaleString() + ' FCFA';
          document.getElementById('detailCotisations').textContent = '- ' + cotisations.toLocaleString() + ' FCFA';
          document.getElementById('detailNetSalary').textContent = netSalary.toLocaleString() + ' FCFA';

          document.getElementById('calculationPreview').classList.remove('hidden');
          document.getElementById('noCalculation').classList.add('hidden');
        } else {
          hideCalculationPreview();
        }
      }

      function hideCalculationPreview() {
        document.getElementById('calculationPreview').classList.add('hidden');
        document.getElementById('noCalculation').classList.remove('hidden');
      }

      function checkFormCompletion() {
        const employeeSelected = document.getElementById('employee_id').value;
        const moisSelected = document.getElementById('mois').value;
        const anneeSelected = document.getElementById('annee').value;

        const isComplete = employeeSelected && moisSelected && anneeSelected;

        document.getElementById('previewBtn').disabled = !isComplete;
        document.getElementById('generateBtn').disabled = !isComplete;
      }

      function resetForm() {
        if (confirm('Êtes-vous sûr de vouloir réinitialiser le formulaire ?')) {
          document.getElementById('payslipForm').reset();
          document.getElementById('selectedEmployeeInfo').classList.add('hidden');
          document.getElementById('periodSummary').classList.add('hidden');
          hideCalculationPreview();
          checkFormCompletion();

          // Reset employee list
          filterEmployees();
        }
      }

      function previewPayslip() {
        const employeeSelect = document.getElementById('employee_id');
        const selectedOption = employeeSelect.options[employeeSelect.selectedIndex];
        const employeeName = selectedOption.dataset.name;
        const employeePost = selectedOption.dataset.post;
        const employeeDept = selectedOption.dataset.department;
        const salary = parseInt(selectedOption.dataset.salary);
        const mois = document.getElementById('mois').value;
        const annee = document.getElementById('annee').value;

        const cotisations = Math.round(salary * 0.15);
        const netSalary = salary - cotisations;

        const previewContent = `
          <div class="bg-gradient-to-r from-purple-50 to-indigo-50 rounded-xl p-6 mb-6">
            <div class="text-center mb-4">
              <h4 class="text-2xl font-bold text-gray-800">FICHE DE PAIE</h4>
              <p class="text-purple-700 font-medium">${mois} ${annee}</p>
            </div>

            <div class="grid grid-cols-2 gap-4 mb-6">
              <div>
                <h5 class="font-semibold text-gray-800 mb-2">EMPLOYÉ</h5>
                <div class="text-sm space-y-1">
                  <div><strong>Nom:</strong> ${employeeName}</div>
                  <div><strong>Poste:</strong> ${employeePost}</div>
                  <div><strong>Département:</strong> ${employeeDept}</div>
                </div>
              </div>
              <div>
                <h5 class="font-semibold text-gray-800 mb-2">ENTREPRISE</h5>
                <div class="text-sm space-y-1">
                  <div><strong>RELIANCE ESCALADE</strong></div>
                  <div>Lomé, Togo</div>
                  <div>Période: ${mois} ${annee}</div>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-white border border-gray-200 rounded-xl overflow-hidden mb-6">
            <table class="w-full">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">LIBELLÉ</th>
                  <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">MONTANT</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <tr>
                  <td class="px-4 py-3 text-sm text-gray-900">Salaire de base</td>
                  <td class="px-4 py-3 text-sm text-right font-medium text-green-600">${salary.toLocaleString()} FCFA</td>
                </tr>
                <tr>
                  <td class="px-4 py-3 text-sm text-gray-900">Cotisations sociales (15%)</td>
                  <td class="px-4 py-3 text-sm text-right font-medium text-red-600">-${cotisations.toLocaleString()} FCFA</td>
                </tr>
                <tr class="bg-blue-50">
                  <td class="px-4 py-3 text-sm font-bold text-gray-900">SALAIRE NET À PAYER</td>
                  <td class="px-4 py-3 text-sm text-right font-bold text-blue-600">${netSalary.toLocaleString()} FCFA</td>
                </tr>
              </tbody>
            </table>
          </div>

          <div class="text-center text-xs text-gray-500">
            <p>Document généré automatiquement par le système RH RELIANCE ESCALADE</p>
            <p>Date de génération: ${new Date().toLocaleDateString('fr-FR')}</p>
          </div>
        `;

        document.getElementById('previewContent').innerHTML = previewContent;
        document.getElementById('previewModal').classList.remove('hidden');
        document.getElementById('previewModal').classList.add('flex');
      }

      function closePreview() {
        document.getElementById('previewModal').classList.add('hidden');
        document.getElementById('previewModal').classList.remove('flex');
      }

      // Set current month and year as default
      document.addEventListener('DOMContentLoaded', function() {
        const now = new Date();
        const currentMonth = now.toLocaleDateString('fr-FR', { month: 'long' });
        const currentYear = now.getFullYear();

        document.getElementById('mois').value = currentMonth.charAt(0).toUpperCase() + currentMonth.slice(1);
        document.getElementById('annee').value = currentYear.toString();

        updatePeriodSummary();
        checkFormCompletion();
      });
      </script>
      {{-- @endsection --}}
      </main>
  </div>
</body>
</html>

                    </div>
                  </div>
                </div>
              </div>

              <!-- Hidden input for structure data -->
              <input type="hidden" id="structure" name="structure" value="">
            </div>

            <!-- Preview Section -->
            <div class="form-section">
              <div class="flex items-center gap-4 mb-8">
                <div class="bg-gradient-to-r from-orange-500 to-red-600 p-3 rounded-2xl shadow-lg">
                  <i class="fas fa-eye text-white text-xl"></i>
                </div>
                <div>
                  <h3 class="text-2xl font-bold text-gray-800">Aperçu de la Structure</h3>
                  <p class="text-gray-600">Visualisation de l'organigramme en cours de création</p>
                </div>
              </div>

              <div id="structurePreview" class="bg-gray-50 rounded-xl p-8 border border-gray-200 min-h-64 flex items-center justify-center">
                <div class="text-center text-gray-500">
                  <i class="fas fa-diagram-project text-4xl mb-4"></i>
                  <p>Sélectionnez un type de structure pour voir l'aperçu</p>
                </div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-between items-center pt-8 border-t border-gray-200">
              <a href="{{ route('orgcharts.index') }}" class="btn-secondary">
                <i class="fas fa-arrow-left mr-2"></i>
                Retour aux Organigrammes
              </a>

              <div class="flex gap-4">
                <button type="button" class="btn-outline" onclick="resetForm()">
                  <i class="fas fa-undo mr-2"></i>
                  Réinitialiser
                </button>
                <button type="button" class="btn-preview" onclick="generatePreview()">
                  <i class="fas fa-eye mr-2"></i>
                  Aperçu Complet
                </button>
                <button type="submit" class="btn-primary-gradient">
                  <i class="fas fa-save mr-2"></i>
                  Créer l'Organigramme
                  <div class="btn-shine"></div>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <style>
      /* Enhanced Form Styles */
      .form-group {
        @apply relative;
      }

      .form-label {
        @apply block text-sm font-semibold text-gray-700 mb-3 flex items-center;
      }

      .form-input, .form-select {
        @apply w-full bg-white border-2 border-gray-200 rounded-xl px-4 py-4 text-gray-800 placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all duration-300 shadow-sm hover:border-gray-300;
      }

      .form-textarea {
        @apply w-full bg-white border-2 border-gray-200 rounded-xl px-4 py-4 text-gray-800 placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all duration-300 shadow-sm hover:border-gray-300 resize-none;
      }

      .form-hint {
        @apply text-xs text-gray-500 mt-2 italic;
      }

      .form-section {
        @apply bg-gradient-to-br from-gray-50/80 to-white rounded-2xl p-8 border border-gray-100 shadow-sm;
      }

      .btn-secondary {
        @apply px-6 py-3 border-2 border-gray-300 rounded-xl text-gray-700 font-semibold hover:bg-gray-50 hover:border-gray-400 transition-all duration-200 flex items-center;
      }

      .btn-outline {
        @apply px-6 py-3 border-2 border-blue-300 rounded-xl text-blue-600 font-semibold hover:bg-blue-50 hover:border-blue-400 transition-all duration-200 flex items-center;
      }

      .btn-preview {
        @apply px-6 py-3 border-2 border-purple-300 rounded-xl text-purple-600 font-semibold hover:bg-purple-50 hover:border-purple-400 transition-all duration-200 flex items-center;
      }

      .btn-primary-gradient {
        @apply relative px-8 py-4 bg-gradient-to-r from-emerald-600 to-teal-600 hover:from-emerald-700 hover:to-teal-700 text-white font-bold rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl flex items-center overflow-hidden;
      }

      .btn-shine {
        @apply absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -skew-x-12 -translate-x-full transition-transform duration-1000;
      }

      .btn-primary-gradient:hover .btn-shine {
        @apply translate-x-full;
      }

      /* Structure Options */
      .structure-option.active .bg-gradient-to-br {
        @apply border-4;
      }

      .template-option.active {
        @apply border-blue-500 bg-blue-50;
      }

      /* Form Enhancement Effects */
      .form-input:focus, .form-select:focus, .form-textarea:focus {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px -5px rgba(59, 130, 246, 0.15);
      }

      /* Section Animation */
      .form-section {
        animation: slideInUp 0.6s ease-out;
      }

      @keyframes slideInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      </style>

      <script>
      let selectedStructureType = null;
      let selectedTemplate = null;

      // Structure type selection
      document.querySelectorAll('.structure-option').forEach(option => {
        option.addEventListener('click', function() {
          // Remove active class from all options
          document.querySelectorAll('.structure-option').forEach(opt => {
            opt.classList.remove('active');
            opt.querySelector('div').classList.remove('border-4');
          });

          // Add active class to selected option
          this.classList.add('active');
          this.querySelector('div').classList.add('border-4');

          // Hide all builders
          document.querySelectorAll('.structure-builder').forEach(builder => {
            builder.classList.add('hidden');
          });

          // Show selected builder
          selectedStructureType = this.dataset.type;
          document.getElementById(selectedStructureType + 'Builder').classList.remove('hidden');

          generatePreview();
        });
      });

      // Template selection
      document.querySelectorAll('.template-option').forEach(option => {
        option.addEventListener('click', function() {
          document.querySelectorAll('.template-option').forEach(opt => {
            opt.classList.remove('active');
          });

          this.classList.add('active');
          selectedTemplate = this.dataset.template;
          generatePreview();
        });
      });

      function generatePreview() {
        const preview = document.getElementById('structurePreview');
        let previewContent = '';

        switch(selectedStructureType) {
          case 'manual':
            previewContent = generateManualPreview();
            break;
          case 'departments':
            previewContent = generateDepartmentPreview();
            break;
          case 'template':
            previewContent = generateTemplatePreview();
            break;
          default:
            previewContent = '<div class="text-center text-gray-500"><i class="fas fa-diagram-project text-4xl mb-4"></i><p>Sélectionnez un type de structure pour voir l\'aperçu</p></div>';
        }

        preview.innerHTML = previewContent;
      }

      function generateManualPreview() {
        return `
          <div class="text-center">
            <div class="bg-blue-100 rounded-lg p-4 mb-4 inline-block">
              <i class="fas fa-crown text-blue-600 mr-2"></i>
              <span class="font-semibold">Direction Générale</span>
            </div>
            <div class="flex justify-center gap-4 flex-wrap">
              <div class="bg-green-100 rounded-lg p-3">
                <i class="fas fa-building text-green-600 mr-2"></i>
                <span class="text-sm">Départements</span>
              </div>
            </div>
            <p class="text-sm text-gray-600 mt-4">Structure hiérarchique manuelle</p>
          </div>
        `;
      }

      function generateDepartmentPreview() {
        return `
          <div class="text-center">
            <div class="bg-emerald-100 rounded-lg p-4 mb-4 inline-block">
              <i class="fas fa-building text-emerald-600 mr-2"></i>
              <span class="font-semibold">RELIANCE ESCALADE</span>
            </div>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-3 max-w-2xl mx-auto">
              <div class="bg-blue-100 rounded-lg p-3 text-sm">Direction</div>
              <div class="bg-purple-100 rounded-lg p-3 text-sm">Administration</div>
              <div class="bg-pink-100 rounded-lg p-3 text-sm">Marketing</div>
              <div class="bg-yellow-100 rounded-lg p-3 text-sm">Commercial</div>
              <div class="bg-indigo-100 rounded-lg p-3 text-sm">Technique</div>
              <div class="bg-green-100 rounded-lg p-3 text-sm">Comptabilité</div>
            </div>
            <p class="text-sm text-gray-600 mt-4">Structure basée sur les départements</p>
          </div>
        `;
      }

      function generateTemplatePreview() {
        if (!selectedTemplate) {
          return '<div class="text-center text-gray-500"><p>Sélectionnez un modèle</p></div>';
        }

        return `
          <div class="text-center">
            <div class="bg-purple-100 rounded-lg p-4 mb-4 inline-block">
              <i class="fas fa-magic text-purple-600 mr-2"></i>
              <span class="font-semibold">Modèle ${selectedTemplate === 'hierarchical' ? 'Hiérarchique' : 'Fonctionnel'}</span>
            </div>
            <div class="max-w-md mx-auto">
              ${selectedTemplate === 'hierarchical' ?
                '<div class="space-y-3"><div class="bg-red-100 rounded p-2">Direction</div><div class="bg-blue-100 rounded p-2">Managers</div><div class="bg-green-100 rounded p-2">Employés</div></div>' :
                '<div class="grid grid-cols-2 gap-3"><div class="bg-blue-100 rounded p-2">RH</div><div class="bg-green-100 rounded p-2">Finance</div><div class="bg-purple-100 rounded p-2">Tech</div><div class="bg-yellow-100 rounded p-2">Marketing</div></div>'
              }
            </div>
            <p class="text-sm text-gray-600 mt-4">Modèle prédéfini ${selectedTemplate}</p>
          </div>
        `;
      }

      function resetForm() {
        if (confirm('Êtes-vous sûr de vouloir réinitialiser le formulaire ?')) {
          document.getElementById('orgchartForm').reset();
          selectedStructureType = null;
          selectedTemplate = null;

          // Reset UI
          document.querySelectorAll('.structure-option').forEach(opt => {
            opt.classList.remove('active');
            opt.querySelector('div').classList.remove('border-4');
          });

          document.querySelectorAll('.template-option').forEach(opt => {
            opt.classList.remove('active');
          });

          document.querySelectorAll('.structure-builder').forEach(builder => {
            builder.classList.add('hidden');
          });

          generatePreview();
        }
      }

      // Form submission
      document.getElementById('orgchartForm').addEventListener('submit', function(e) {
        // Generate structure data based on selected type
        let structureData = {};

        switch(selectedStructureType) {
          case 'manual':
            structureData = generateManualStructure();
            break;
          case 'departments':
            structureData = generateDepartmentStructure();
            break;
          case 'template':
            structureData = generateTemplateStructure();
            break;
        }

        document.getElementById('structure').value = JSON.stringify(structureData);
      });

      function generateManualStructure() {
        return {
          type: 'manual',
          root: document.getElementById('rootEmployee').value,
          departments: Array.from(document.querySelectorAll('select[name^="department_managers"]')).reduce((acc, select) => {
            const dept = select.name.match(/\[(.*?)\]/)[1];
            acc[dept] = select.value;
            return acc;
          }, {})
        };
      }

      function generateDepartmentStructure() {
        return {
          type: 'departments',
          auto_generate: true
        };
      }

      function generateTemplateStructure() {
        return {
          type: 'template',
          template: selectedTemplate
        };
      }

      // Initialize
      document.addEventListener('DOMContentLoaded', function() {
        generatePreview();
      });
      </script>
      {{-- @endsection --}}
      </main>
  </div>
</body>
</html>

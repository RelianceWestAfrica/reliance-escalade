                <div class="bg-gradient-to-r from-indigo-500 to-purple-600 p-1 rounded-md shadow-lg">
                  <i class="fas fa-eye text-white text-xl"></i>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-800">Aperçu de l'Offre</h3>
                </div>
              </div>

              <div id="offerPreview" class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-8 border border-gray-200">
                <div class="text-center text-gray-500 py-8">
                  <i class="fas fa-briefcase text-4xl mb-4"></i>
                  <p>Remplissez les champs pour voir l'aperçu de votre offre</p>
                </div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-between items-center pt-8 border-t border-gray-200">
              <a href="{{ route('careers.index') }}" class="bg-gray-700 hover:bg-cyan-50 text-white hover:text-black border border-gray-200 rounded-lg p-3 text-center transition-colors card-hover">
                {{-- <i class="fas fa-arrow-left mr-2"></i> --}}
                Retour aux Offres
              </a>

              <div class="flex gap-4">
                <button type="button" class="bg-blue-50 hover:bg-cyan-50 border border-blue-100 rounded-lg p-3 text-center transition-colors card-hover" onclick="resetForm()">
                  {{-- <i class="fas fa-undo mr-2"></i> --}}
                  Réinitialiser
                </button>
                <button type="button" class="bg-blue-50 hover:bg-cyan-50 border border-blue-100 rounded-lg p-3 text-center transition-colors card-hover" onclick="updatePreview()">
                  {{-- <i class="fas fa-eye mr-2"></i> --}}
                  Actualiser Aperçu
                </button>
                <button type="submit" class="bg-blue-700/85 hover:bg-blue-50 text-white hover:text-black border border-blue-200 rounded-lg p-3 text-center transition-colors card-hover">
                  {{-- <i class="fas fa-briefcase mr-2"></i> --}}
                  Créer l'Offre
                  <div class="btn-shine"></div>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <style>
      /* Enhanced Form Styles */
      .form-group {
        @apply relative;
      }

      .form-label {
        @apply block text-sm font-semibold text-gray-700 mb-3 flex items-center;
      }

      .form-input, .form-select {
        @apply w-full bg-white border-2 border-gray-200 rounded-xl px-4 py-4 text-gray-800 placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all duration-300 shadow-sm hover:border-gray-300;
      }

      .form-textarea {
        @apply w-full bg-white border-2 border-gray-200 rounded-xl px-4 py-4 text-gray-800 placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all duration-300 shadow-sm hover:border-gray-300 resize-none;
      }

      .form-hint {
        @apply text-xs text-gray-500 mt-2 italic;
      }

      .form-section {
        @apply bg-gradient-to-br from-gray-50/80 to-white rounded-2xl p-8 border border-gray-100 shadow-sm;
      }

      .btn-secondary {
        @apply px-6 py-3 border-2 border-gray-300 rounded-xl text-gray-700 font-semibold hover:bg-gray-50 hover:border-gray-400 transition-all duration-200 flex items-center;
      }

      .btn-outline {
        @apply px-6 py-3 border-2 border-blue-300 rounded-xl text-blue-600 font-semibold hover:bg-blue-50 hover:border-blue-400 transition-all duration-200 flex items-center;
      }

      .btn-preview {
        @apply px-6 py-3 border-2 border-purple-300 rounded-xl text-purple-600 font-semibold hover:bg-purple-50 hover:border-purple-400 transition-all duration-200 flex items-center;
      }

      .btn-primary-gradient {
        @apply relative px-8 py-4 bg-gradient-to-r from-violet-600 to-purple-600 hover:from-violet-700 hover:to-purple-700 text-white font-bold rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl flex items-center overflow-hidden;
      }

      .btn-shine {
        @apply absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -skew-x-12 -translate-x-full transition-transform duration-1000;
      }

      .btn-primary-gradient:hover .btn-shine {
        @apply translate-x-full;
      }

      /* Form Enhancement Effects */
      .form-input:focus, .form-select:focus, .form-textarea:focus {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px -5px rgba(59, 130, 246, 0.15);
      }

      /* Section Animation */
      .form-section {
        animation: slideInUp 0.6s ease-out;
      }

      @keyframes slideInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      </style>

      <script>
      // Real-time preview update
      function updatePreview() {
        const intitule = document.getElementById('intitule').value;
        const poste = document.getElementById('poste').value;
        const departement = document.getElementById('departement').value;
        const typeContrat = document.getElementById('type_contrat').value;
        const description = document.getElementById('description').value;
        const competences = document.getElementById('competences_requises').value;
        const experience = document.getElementById('experience').value;
        const salaire = document.getElementById('salaire').value;
        const dateCloture = document.getElementById('date_cloture').value;

        const preview = document.getElementById('offerPreview');

        if (!intitule && !poste) {
          preview.innerHTML = `
            <div class="text-center text-gray-500 py-8">
              <i class="fas fa-briefcase text-4xl mb-4"></i>
              <p>Remplissez les champs pour voir l'aperçu de votre offre</p>
            </div>
          `;
          return;
        }

        const previewContent = `
          <div class="bg-gradient-to-r from-violet-50 to-purple-50 rounded-xl p-6 mb-6">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-16 h-16 bg-violet-500 rounded-xl flex items-center justify-center">
                <ion-icon name="logo-slack" class="text-2xl text-white rounded-full"></ion-icon>
              </div>
              <div>
                <h4 class="text-2xl font-bold text-gray-800">${intitule || 'Titre de l\'offre'}</h4>
                <p class="mt-1 text-green-700 font-semibold">${poste || 'Poste'} - ${departement || 'Département'}</p>
              </div>
            </div>

            <div class="flex items-center gap-6">
              <span class="px-3 py-1 bg-violet-100 text-violet-700 rounded-full text-sm font-medium">
                <i class="fas fa-file-contract mr-1"></i>
                ${typeContrat || 'Type contrat'}
              </span>
              ${salaire ? `
                <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-sm font-medium">
                  <i class="fas fa-money-bill mr-1"></i>
                  ${parseInt(salaire).toLocaleString()} FCFA
                </span>
              ` : ''}
              ${dateCloture ? `
                <span class="px-3 py-1 bg-orange-100 text-orange-700 rounded-full text-sm font-medium">
                  <i class="fas fa-calendar mr-1"></i>
                  Jusqu'au ${new Date(dateCloture).toLocaleDateString('fr-FR')}
                </span>
              ` : ''}
            </div>
          </div>

          ${description ? `
            <div class="mb-6">
              <h5 class="font-semibold text-gray-800 mb-3">Description du poste</h5>
              <div class="bg-gray-50 rounded-xl p-4 text-gray-700 whitespace-pre-line">${description}</div>
            </div>
          ` : ''}

          ${competences ? `
            <div class="mb-6">
              <h5 class="font-semibold text-gray-800 mb-3">Compétences requises</h5>
              <div class="bg-blue-50 rounded-xl p-4 text-gray-700 whitespace-pre-line">${competences}</div>
            </div>
          ` : ''}

          ${experience ? `
            <div class="mb-6">
              <h5 class="font-semibold text-gray-800 mb-3">Expérience et formation</h5>
              <div class="bg-green-50 rounded-xl p-4 text-gray-700 whitespace-pre-line">${experience}</div>
            </div>
          ` : ''}

          <div class="text-center pt-6 border-t border-gray-200">
            <button class="bg-violet-600 text-white px-8 py-3 rounded-xl font-semibold">
              <i class="fas fa-paper-plane mr-2"></i>
              POSTULER
            </button>
          </div>
        `;

        preview.innerHTML = previewContent;
      }

      // Auto-update preview on input
      document.addEventListener('DOMContentLoaded', function() {
        const inputs = document.querySelectorAll('#intitule, #poste, #departement, #type_contrat, #description, #competences_requises, #experience, #salaire, #date_cloture');
        inputs.forEach(input => {
          input.addEventListener('input', updatePreview);
          input.addEventListener('change', updatePreview);
        });

        // Set default closing date (30 days from now)
        const defaultDate = new Date();
        defaultDate.setDate(defaultDate.getDate() + 30);
        document.getElementById('date_cloture').value = defaultDate.toISOString().split('T')[0];

        updatePreview();
      });

      function resetForm() {
        if (confirm('Êtes-vous sûr de vouloir réinitialiser le formulaire ?')) {
          document.getElementById('jobOfferForm').reset();
          updatePreview();
        }
      }
      </script>
     {{-- @endsection --}}
      </main>
  </div>
</body>
</html>

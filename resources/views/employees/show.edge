      <script>
      // Tab functionality
      document.querySelectorAll('.tab-button').forEach(button => {
        button.addEventListener('click', () => {
          // Remove active class from all buttons and contents
          document.querySelectorAll('.tab-button').forEach(b => b.classList.remove('active'));
          document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));

          // Add active class to clicked button
          button.classList.add('active');

          // Show corresponding content
          const tabId = button.getAttribute('data-tab') + '-tab';
          document.getElementById(tabId)?.classList.add('active');
        });
      });

      // Print profile function
      function printProfile() {
        window.print();
      }
      </script>

      <style>
      .tab-button {
        @apply py-4 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300 transition-all;
      }

      .tab-button.active {
        @apply border-blue-500 text-blue-600;
      }

      /* Buttons */
      .btn-primary {
        @apply bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold py-3 px-6 rounded-xl transition-all duration-200 transform hover:scale-105 shadow-lg flex items-center;
      }

      .btn-secondary {
        @apply bg-gradient-to-r from-gray-600 to-gray-700 hover:from-gray-700 hover:to-gray-800 text-white font-semibold py-3 px-6 rounded-xl transition-all duration-200 transform hover:scale-105 shadow-lg flex items-center;
      }

      .tab-content {
        @apply hidden;
      }

      .tab-content.active {
        @apply block;
      }
      </style>

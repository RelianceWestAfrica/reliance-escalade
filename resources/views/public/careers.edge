                value="{{ request.input('search', '') }}"
              >
            </div>

            <div class="form-group">
              <label for="pays" class="block text-sm font-semibold text-gray-700 mb-2">
                <i class="fas fa-globe text-blue-700/70 mr-2"></i>
                Filtrer par Pays
              </label>
              <select
                id="pays"
                name="pays"
                class="w-full bg-white border-2 border-gray-200 rounded-xl px-4 py-3 text-gray-800 focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all duration-300 shadow-sm hover:border-gray-300"

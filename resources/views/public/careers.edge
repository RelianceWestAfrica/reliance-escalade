                name="departement"
                class="w-full bg-white border-2 border-gray-200 rounded-xl px-4 py-3 text-gray-800 focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all duration-300 shadow-sm hover:border-gray-300"
              >
                <option value="">Tous les départements</option>
                <option value="Direction" {{ request.input('departement') === 'Direction' ? 'selected' : '' }}>Direction</option>
                <option value="Administration" {{ request.input('departement') === 'Administration' ? 'selected' : '' }}>Administration</option>
                <option value="Marketing et Communication" {{ request.input('departement') === 'Marketing et Communication' ? 'selected' : '' }}>Marketing et Communication</option>
                <option value="Commercial" {{ request.input('departement') === 'Commercial' ? 'selected' : '' }}>Commercial</option>
                <option value="Technique et développement" {{ request.input('departement') === 'Technique et développement' ? 'selected' : '' }}>Technique et développement</option>
                <option value="Ressources Humaines" {{ request.input('departement') === 'Ressources Humaines' ? 'selected' : '' }}>Ressources Humaines</option>

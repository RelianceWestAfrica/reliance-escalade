      @if(offers.length > 0)
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          @each(offer in offers)
            <div class="bg-white/95 backdrop-blur-sm rounded-2xl shadow-xl border border-gray-200/50 overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
              <!-- Offer Header -->
              <div class="bg-gradient-to-r from-{{
                offer.departement === 'Direction' ? 'yellow-500 to-orange-500' :
                offer.departement === 'Administration' ? 'blue-500 to-indigo-500' :
                offer.departement === 'Marketing et Communication' ? 'pink-500 to-purple-500' :
                offer.departement === 'Commercial' ? 'green-500 to-emerald-500' :
                offer.departement === 'Technique et développement' ? 'indigo-500 to-purple-500' :
                'gray-500 to-gray-600'
              }} p-6 text-white">
                <div class="flex items-start justify-between mb-4">
                  <div class="bg-white/20 backdrop-blur-sm p-3 rounded-xl">
                    <i class="fas fa-briefcase text-2xl"></i>
                  </div>
                  <span class="px-3 py-1 bg-white/20 backdrop-blur-sm rounded-full text-sm font-medium">
                    {{ offer.typeContrat }}
                  </span>
                </div>
                <h3 class="text-xl font-bold mb-2">{{ offer.intitule }}</h3>
                <p class="text-white/90 font-medium">{{ offer.poste }}</p>
                <p class="text-white/80 text-sm">{{ offer.departement }}</p>
              </div>

              <!-- Offer Content -->
              <div class="p-6">
                @if(offer.description)
                  <div class="mb-4">
                    <p class="text-gray-700 text-sm leading-relaxed line-clamp-3">
                      {{ offer.description.substring(0, 150) }}{{ offer.description.length > 150 ? '...' : '' }}
                    </p>
                  </div>
                @endif

                <div class="space-y-3 mb-6">
                  @if(offer.salaire)
                    <div class="flex items-center gap-2 text-sm text-gray-600">
                      <i class="fas fa-money-bill text-green-500"></i>
                      <span>{{ offer.salaire.toLocaleString() }} FCFA/mois</span>
                    </div>
                  @endif
                  <div class="flex items-center gap-2 text-sm text-gray-600">
                    <i class="fas fa-calendar text-orange-500"></i>
                    <span>Candidatures jusqu'au {{ offer.dateCloture.toFormat('dd/MM/yyyy') }}</span>
                  </div>
                  <div class="flex items-center gap-2 text-sm text-gray-600">
                    <i class="fas fa-users text-blue-500"></i>
                    <span>{{ offer.$extras.applications_count || 0 }} candidature(s)</span>
                  </div>
                </div>

                <!-- Apply Button -->
                <a href="{{ route('jobs.show', [offer.id]) }}" class="w-full bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white py-3 px-6 rounded-xl font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg flex items-center justify-center">
                  <i class="fas fa-paper-plane mr-2"></i>

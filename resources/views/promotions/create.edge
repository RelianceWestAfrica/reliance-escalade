                <button type="submit" class="bg-blue-700/85 hover:bg-blue-50 text-white hover:text-black border border-blue-200 rounded-lg p-3 text-center transition-colors card-hover">
                  <i class="fas fa-arrow-up mr-2"></i>
                  Créer la Promotion
                  <div class="btn-shine"></div>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <!-- Preview Modal -->
      <div id="previewModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden items-center justify-center z-50">
        <div class="bg-white rounded-3xl shadow-2xl max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
          <div class="p-8">
            <div class="flex items-center justify-between mb-6">
              <h3 class="text-2xl font-bold text-gray-800">Aperçu de la Promotion</h3>
              <button onclick="closePreview()" class="text-gray-500 hover:text-gray-700">
                <i class="fas fa-times text-xl"></i>
              </button>
            </div>
            <div id="previewContent" class="space-y-4">
              <!-- Preview content will be inserted here -->
            </div>
          </div>
        </div>
      </div>

      <style>
      /* Enhanced Form Styles */
      .form-group {
        @apply relative;
      }

      .form-label {
        @apply block text-sm font-semibold text-gray-700 mb-3 flex items-center;
      }

      .form-input, .form-select {
        @apply w-full bg-white border-2 border-gray-200 rounded-xl px-4 py-4 text-gray-800 placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all duration-300 shadow-sm hover:border-gray-300;
      }

      .form-hint {
        @apply text-xs text-gray-500 mt-2 italic;
      }

      .form-section {
        @apply bg-gradient-to-br from-gray-50/80 to-white rounded-2xl p-8 border border-gray-100 shadow-sm;
      }

      .btn-secondary {
        @apply px-6 py-3 border-2 border-gray-300 rounded-xl text-gray-700 font-semibold hover:bg-gray-50 hover:border-gray-400 transition-all duration-200 flex items-center;
      }

      .btn-outline {
        @apply px-6 py-3 border-2 border-blue-300 rounded-xl text-blue-600 font-semibold hover:bg-blue-50 hover:border-blue-400 transition-all duration-200 flex items-center;
      }

      .btn-preview {
        @apply px-6 py-3 border-2 border-purple-300 rounded-xl text-purple-600 font-semibold hover:bg-purple-50 hover:border-purple-400 transition-all duration-200 flex items-center;
      }

      .btn-primary-gradient {
        @apply relative px-8 py-4 bg-gradient-to-r from-emerald-600 to-green-600 hover:from-emerald-700 hover:to-green-700 text-white font-bold rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl flex items-center overflow-hidden;
      }

      .btn-shine {
        @apply absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -skew-x-12 -translate-x-full transition-transform duration-1000;
      }

      .btn-primary-gradient:hover .btn-shine {
        @apply translate-x-full;
      }

      /* Form Enhancement Effects */
      .form-input:focus, .form-select:focus {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px -5px rgba(59, 130, 246, 0.15);
      }

      /* Section Animation */
      .form-section {
        animation: slideInUp 0.6s ease-out;
      }

      @keyframes slideInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      </style>

      <script>
      // Employee selection handler
      document.getElementById('employee_id').addEventListener('change', function() {
        const selectedOption = this.options[this.selectedIndex];
        const employeeInfo = document.getElementById('employeeCurrentInfo');

        if (this.value) {
          const employeeName = selectedOption.textContent.split(' - ')[0].replace('👤 ', '');
          const currentPost = selectedOption.dataset.currentPost;
          const currentSalary = parseInt(selectedOption.dataset.currentSalary);
          const department = selectedOption.dataset.department;

          // Update display
          document.getElementById('currentEmployeeName').textContent = employeeName;
          document.getElementById('currentEmployeeDept').textContent = department;
          document.getElementById('currentEmployeePost').textContent = currentPost;
          document.getElementById('currentEmployeeSalary').textContent = currentSalary.toLocaleString() + ' FCFA';

          // Update form fields
          document.getElementById('ancien_poste').value = currentPost;
          document.getElementById('ancien_salaire').value = currentSalary;

          employeeInfo.classList.remove('hidden');
          calculateSalaryIncrease();
        } else {
          employeeInfo.classList.add('hidden');
          document.getElementById('ancien_poste').value = '';
          document.getElementById('ancien_salaire').value = '';
        }
      });

      // Salary calculation
      document.getElementById('nouveau_salaire').addEventListener('input', calculateSalaryIncrease);

      function calculateSalaryIncrease() {
        const oldSalary = parseInt(document.getElementById('ancien_salaire').value) || 0;
        const newSalary = parseInt(document.getElementById('nouveau_salaire').value) || 0;

        if (oldSalary > 0 && newSalary > 0) {
          const increase = newSalary - oldSalary;
          const percentage = ((increase / oldSalary) * 100).toFixed(1);

          const increaseElement = document.getElementById('salaryIncrease');
          if (increase > 0) {
            increaseElement.textContent = `+${increase.toLocaleString()} FCFA (+${percentage}%)`;
            increaseElement.className = 'mt-2 form-input bg-green-50 border-green-200 text-green-700 font-semibold p-2';
          } else if (increase < 0) {
            increaseElement.textContent = `${increase.toLocaleString()} FCFA (${percentage}%)`;
            increaseElement.className = 'mt-2 form-input bg-red-50 border-red-200 text-red-700 font-semibold p-2';
          } else {
            increaseElement.textContent = 'Aucune augmentation';
            increaseElement.className = 'mt-2 form-input bg-gray-50 border-gray-200 text-gray-700 font-semibold p-2';
          }
        } else {
          document.getElementById('salaryIncrease').textContent = 'Calculé automatiquement';
        }
      }

      function resetForm() {
        if (confirm('Êtes-vous sûr de vouloir réinitialiser le formulaire ?')) {
          document.getElementById('promotionForm').reset();
          document.getElementById('employeeCurrentInfo').classList.add('hidden');
          document.getElementById('salaryIncrease').textContent = 'Calculé automatiquement';
        }
      }

      function previewPromotion() {
        const employeeSelect = document.getElementById('employee_id');
        const employeeName = employeeSelect.options[employeeSelect.selectedIndex].textContent.split(' - ')[0].replace('👤 ', '');
        const ancienPoste = document.getElementById('ancien_poste').value;
        const nouveauPoste = document.getElementById('nouveau_poste').value;
        const ancienSalaire = parseInt(document.getElementById('ancien_salaire').value) || 0;
        const nouveauSalaire = parseInt(document.getElementById('nouveau_salaire').value) || 0;
        const dateVigueur = document.getElementById('date_vigueur').value;
        const statut = document.getElementById('statut').value;

        const increase = nouveauSalaire - ancienSalaire;
        const percentage = ancienSalaire > 0 ? ((increase / ancienSalaire) * 100).toFixed(1) : 0;

        const previewContent = `
          <div class="bg-gradient-to-r from-emerald-50 to-green-50 rounded-xl p-6 mb-4">
            <h4 class="text-xl font-bold text-gray-800 mb-2">${employeeName || 'Employé non sélectionné'}</h4>
            <p class="text-emerald-700 font-medium">Promotion programmée</p>
          </div>

          <div class="grid grid-cols-2 gap-4 mb-6">
            <div class="text-center p-4 bg-blue-50 rounded-lg">
              <div class="text-sm text-gray-600">Poste Actuel</div>
              <div class="font-semibold text-blue-700">${ancienPoste || 'Non défini'}</div>
            </div>
            <div class="text-center p-4 bg-green-50 rounded-lg">
              <div class="text-sm text-gray-600">Nouveau Poste</div>
              <div class="font-semibold text-green-700">${nouveauPoste || 'Non défini'}</div>
            </div>
          </div>

          <div class="grid grid-cols-2 gap-4 mb-6">
            <div class="text-center p-4 bg-gray-50 rounded-lg">
              <div class="text-sm text-gray-600">Salaire Actuel</div>
              <div class="font-semibold text-gray-700">${ancienSalaire.toLocaleString()} FCFA</div>
            </div>
            <div class="text-center p-4 bg-emerald-50 rounded-lg">
              <div class="text-sm text-gray-600">Nouveau Salaire</div>
              <div class="font-semibold text-emerald-700">${nouveauSalaire.toLocaleString()} FCFA</div>
            </div>
          </div>

          <div class="text-center p-4 bg-yellow-50 rounded-lg mb-6">
            <div class="text-sm text-gray-600">Augmentation</div>
            <div class="font-bold text-yellow-700">+${increase.toLocaleString()} FCFA (+${percentage}%)</div>
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div class="text-center p-4 bg-purple-50 rounded-lg">
              <div class="text-sm text-gray-600">Date d'Effet</div>
              <div class="font-semibold text-purple-700">${dateVigueur ? new Date(dateVigueur).toLocaleDateString('fr-FR') : 'Non définie'}</div>
            </div>
            <div class="text-center p-4 bg-purple-50 rounded-lg">
              <div class="text-sm text-gray-600">Statut</div>
              <div class="font-semibold text-purple-700">${statut || 'En attente'}</div>
            </div>
          </div>
        `;

        document.getElementById('previewContent').innerHTML = previewContent;
        document.getElementById('previewModal').classList.remove('hidden');
        document.getElementById('previewModal').classList.add('flex');
      }

      function closePreview() {
        document.getElementById('previewModal').classList.add('hidden');
        document.getElementById('previewModal').classList.remove('flex');
      }

      // Set default date to today
      document.addEventListener('DOMContentLoaded', function() {
        const today = new Date().toISODate();
        document.getElementById('date_vigueur').value = today;
      });
      </script>
      {{-- @endsection --}}

      </main>
  </div>
</body>
</html>
